function nios {
  mkdir -p assets/images assets/images@2x assets/nibs
  mkdir -p classes/constants classes/controllers classes/lib classes/models classes/managers classes/utils classes/views
}
function count {
  ls | wc -l
}
function take {
  mkdir $1
  cd $1
}
function tm {
  tmux new -s $1
}
function push {
  git push
  git push heroku
}
function prec {
  RAILS_ENV=production 
  bundle exec rake assets:precompile
}
function tell {
  cd $1
  ls -l
}
function rvm_install {
  rvm install $1 --with-gcc=clang
}
function migrate {
  rake db:migrate
  rake db:test:prepare
}
function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ \[\1\]/'
}
function proml {

  local        BLUE="\[\033[0;34m\]"
  local     DEFAULT="\[\033[0m\]"

PS1="\n\u: \w $BLUE\$(parse_git_branch) $DEFAULT \nâž¥ "
}
proml
